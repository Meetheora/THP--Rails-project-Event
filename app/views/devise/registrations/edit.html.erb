<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm mb-4">
        <div class="card-body text-center">
          <h2 class="card-title mb-4">Photo de profil</h2>

          <!-- Affichage de l'avatar -->
          <div class="mb-4">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar, alt: 'avatar', class: "img-fluid rounded-circle shadow", style: "width: 150px; height: 150px; object-fit: cover;" %>
            <% else %>
              <!-- Image aléatoire par défaut -->
              <img src="https://ui-avatars.com/api/?name=<%= current_user.first_name %>&background=random" alt="avatar random" class="img-fluid rounded-circle shadow" style="width: 150px; height: 150px;">
            <% end %>
          </div>

          <!-- Formulaire d'upload pointant vers AvatarsController -->
          <%= form_tag user_avatars_path(current_user), multipart: true do %>
            <div class="mb-3 w-75 mx-auto">
              <%= file_field_tag :avatar, class: "form-control" %>
            </div>
            <div class="d-grid gap-2 w-75 mx-auto">
              <%= submit_tag "Mettre à jour ma photo", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
      <!-- Bloc de modification du compte -->
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Edit <%= resource_name.to_s.humanize %></h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="alert alert-info">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="mb-3">
              <%= f.label :password, class: "form-label" %> 
              <small class="text-muted"><i>(leave blank if you don't want to change it)</i></small>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              <% if @minimum_password_length %>
                <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <hr class="my-4">

            <div class="mb-3">
              <%= f.label :current_password, class: "form-label text-danger" %> 
              <small class="text-muted"><i>(we need your current password to confirm your changes)</i></small>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control border-danger" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Update", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Bloc de suppression du compte -->
      <div class="card shadow-sm border-danger mb-5">
        <div class="card-body text-center">
          <h3 class="text-danger h5">Cancel my account</h3>
          <p class="mb-3">Unhappy with our service?</p>
          <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger mb-2" %>
          <div>
            <%= link_to "Back", :back, class: "text-decoration-none" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>