<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h2 class="h4 mb-0 text-center">Créer un nouvel événement</h2>
        </div>

        <div class="card-body p-4">
          <%= form_with model: @event, local: true, data: { turbo: false } do |f| %>

            <div class="mb-3">
              <%= f.label :title, "Titre de l'événement", class: "form-label fw-bold" %>
              <%= f.text_field :title, class: "form-control", placeholder: "Soirée Networking Rails" %>
              <div class="form-text">Entre 5 et 140 caractères.</div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :start_date, "Date et heure de début", class: "form-label fw-bold" %>
                <%= f.datetime_select :start_date, { start_year: Time.now.year }, { class: "form-select" } %>
              </div>

              <div class="col-md-6">
                <%= f.label :duration, "Durée (minutes)", class: "form-label fw-bold" %>
                <%= f.number_field :duration, step: 5, class: "form-control", placeholder: "60" %>
                <div class="form-text">Multiple de 5.</div>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :description, "Description", class: "form-label fw-bold" %>
              <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Min. 20 caractères" %>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :price, "Prix (€)", class: "form-label fw-bold" %>
                <%= f.number_field :price, class: "form-control", placeholder: "Prix compris entre 1 et 1000" %>
              </div>

              <div class="col-md-6">
                <%= f.label :location, "Lieu", class: "form-label fw-bold" %>
                <%= f.text_field :location, class: "form-control" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :photo %>
              <%= f.file_field :photo, class: "form-control" %>
            </div>

            <div class="d-grid gap-2 mt-4">
              <%= f.submit "Valider et créer l'événement", class: "btn btn-primary btn-lg" %>
            </div>

          <% end %>
        </div>

        <div class="card-footer text-center py-3">
          <%= link_to "Annuler et revenir à l'accueil", root_path, class: "text-muted text-decoration-none" %>
        </div>
      </div>
    </div>
  </div>
</div>