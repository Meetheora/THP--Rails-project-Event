<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white">
          <h2 class="h4 mb-0 text-center"><%= @event.title %></h2>
        </div>

        <div class="card-body">
          <p class="text-muted mb-2">
            <strong>Date :</strong> <%= @event.start_date.strftime("%d %B %Y à %H:%M") %>
          </p>
          <p class="text-muted mb-2">
            <strong>Durée :</strong> <%= @event.duration %> minutes
          </p>
          <p class="text-muted mb-2">
            <strong>Lieu :</strong> <%= @event.location %>
          </p>
          <p class="text-primary fw-bold mb-3">
            <strong>Prix :</strong> <%= @event.price || 0 %> €
          </p>

          <h5>Description</h5>
          <p><%= simple_format(@event.description) %></p>

          <div class="d-flex justify-content-between mt-4">
            <%= link_to "Retour aux événements", root_path, class: "btn btn-outline-secondary" %>
            <% if user_signed_in? %>
              <%= link_to "Modifier cet événement", edit_event_path(@event), class: "btn btn-warning" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>