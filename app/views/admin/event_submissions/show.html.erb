<div class="container my-5">
  <div class="card shadow rounded-4">
    <div class="card-header bg-primary text-white">
      <h2 class="h4 mb-0"><%= @event.title %></h2>
    </div>
    <div class="card-body p-5">
      <p class="text-muted">
        Organisé par <strong><%= @event.admin.email %></strong>
      </p>

      <hr>

      <% if @event.photo.attached? %>
        <div class="mb-3 text-center">
          <%= image_tag @event.photo, class: "img-fluid rounded" %>
        </div>
      <% end %>

      <p><strong>Date :</strong> <%= l(@event.start_date, format: :long) %></p>
      <p><strong>Durée :</strong> <%= @event.duration %> minutes</p>
      <p><strong>Lieu :</strong> <%= @event.location %></p>
      <p><strong>Prix :</strong> <%= @event.price || 0 %> €</p>

      <p><%= simple_format(@event.description) %></p>

      <div class="d-flex gap-2 mt-4">
        <%= link_to "Retour", admin_event_submissions_path, class: "btn btn-outline-secondary" %>
        
    </div>
  </div>
</div>