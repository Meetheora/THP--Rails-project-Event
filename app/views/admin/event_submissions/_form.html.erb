<%= form_with model: [:admin, event], local: true do |f| %>

  <div class="mb-3">
    <%= f.label :title, "Titre", class: "form-label fw-semibold" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Description", class: "form-label fw-semibold" %>
    <%= f.text_area :description, rows: 5, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :start_date, "Date", class: "form-label fw-semibold" %>
      <%= f.datetime_local_field :start_date, class: "form-control" %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :location, "Lieu", class: "form-label fw-semibold" %>
      <%= f.text_field :location, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :price, "Prix (â‚¬)", class: "form-label fw-semibold" %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit "Enregistrer les modifications",
          class: "btn btn-primary px-4" %>
  </div>

<% end %>