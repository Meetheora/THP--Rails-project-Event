<div class="container py-5">
  <h1 class="fw-bold mb-4">Gestion des événements</h1>

  <table class="table table-hover shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>Titre</th>
        <th>Statut</th>
        <th class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td>
            <% if event.validated? %>
              <span class="badge bg-success">Validé</span>
            <% else %>
              <span class="badge bg-warning text-dark">En attente</span>
            <% end %>
          </td>
      <td class="text-end d-flex justify-content-end gap-2">
        <!-- Voir -->
        <%= link_to "Voir", admin_event_path(event), class: "btn btn-sm btn-outline-primary" %>

        <!-- Modifier -->
        <%= link_to "Modifier", edit_admin_event_path(event), class: "btn btn-sm btn-outline-warning" %>

        <!-- Supprimer -->
        <%= form_with model: [:admin, event], method: :delete, data: { confirm: "Confirmer la suppression ?" }, local: true, class: "d-inline" do |f| %>
          <%= f.submit "Supprimer", class: "btn btn-sm btn-outline-danger" %>
        <% end %>
      </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>