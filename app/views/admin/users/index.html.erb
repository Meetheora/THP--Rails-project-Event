<div class="container py-5">
  <h1 class="fw-bold mb-4">Gestion des utilisateurs</h1>

  <table class="table table-hover shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>Email</th>
        <th>Admin</th>
        <th class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td>
            <% if user.admin? %>
              <span class="badge bg-success">Oui</span>
            <% else %>
              <span class="badge bg-secondary">Non</span>
            <% end %>
          </td>
          <td class="text-end">
            <!-- Voir -->
            <%= link_to "Voir", admin_user_path(user), class: "btn btn-sm btn-outline-primary" %>
            <!-- Modifier -->
            <%= link_to "Modifier", edit_admin_user_path(user), class: "btn btn-sm btn-outline-warning" %>
            <!-- Supprimer -->
            <%= form_with model: [:admin, user], method: :delete, data: { confirm: "Confirmer la suppression ?" }, local: true, class: "d-inline" do |f| %>
              <%= f.submit "Supprimer", class: "btn btn-sm btn-outline-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>