<div class="container py-5">
  <h1 class="fw-bold mb-4">Gestion des utilisateurs</h1>

  <table class="table table-hover shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>Email</th>
        <th>Admin</th>
        <th class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td>
            <% if user.admin? %>
              <span class="badge bg-success">Oui</span>
            <% else %>
              <span class="badge bg-secondary">Non</span>
            <% end %>
          </td>
          <td class="text-end">
            <%= link_to "Voir", admin_user_path(user), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "Modifier", edit_admin_user_path(user), class: "btn btn-sm btn-outline-warning" %>
            <%= link_to "Supprimer", admin_user_path(user),
                  method: :delete,
                  data: { confirm: "Confirmer ?" },
                  class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>